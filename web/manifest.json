{
  "manifest_version": 3,
  "name": "Selection Popup",
  "version": "1.1",
  "description": "Displays selected text in a popup only when extension is ON.",
  "permissions": ["storage", "scripting", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Toggle Selection Popup"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
